<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".application.view.profilescreen.ProfileFragment">

    <include layout="@layout/part_result" />


    <GridLayout
        android:id="@+id/log_out_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_log_out_layout"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logout_layout_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:text="@string/logout_layout_text"
            android:textColor="@color/white"
            android:textSize="@dimen/big_text_size" />

        <Button
            android:id="@+id/yes_logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:text="@string/yes_text"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/no_logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/register_button_on_color"
            android:text="@string/no_text"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </GridLayout>

    <LinearLayout
        android:id="@+id/default_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/tts_main_text" />

        <TextView
            android:id="@+id/name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="@string/profile_screen_name_default"
            android:textColor="@color/white"
            android:textSize="@dimen/very_big_text_size" />

        <TextView
            android:id="@+id/email_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="@string/default_string"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size" />


        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/profile_screen_button_color"
            android:drawableRight="@drawable/arrow_profile_screen_icon"
            android:text="@string/button_register_text"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="@dimen/big_text_size"
            android:visibility="gone"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/entry_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/profile_screen_button_color"
            android:drawableRight="@drawable/arrow_profile_screen_icon"
            android:text="@string/button_entry_text"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="@dimen/big_text_size"
            android:visibility="gone"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/profile_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/profile_screen_button_color"
            android:drawableLeft="@drawable/profile_icon"
            android:drawableRight="@drawable/arrow_profile_screen_icon"
            android:text="@string/profile_button_text"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="@dimen/big_text_size"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/favorite_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/profile_screen_button_color"
            android:drawableLeft="@drawable/favorite_icon"
            android:drawableRight="@drawable/arrow_profile_screen_icon"
            android:text="@string/favorite_button_text"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="@dimen/big_text_size"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/history_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/profile_screen_button_color"
            android:drawableLeft="@drawable/history_icon"
            android:drawableRight="@drawable/arrow_profile_screen_icon"
            android:text="@string/history_button_text"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="@dimen/big_text_size"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/support_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/profile_screen_button_color"
            android:drawableLeft="@drawable/support_icon"
            android:drawableRight="@drawable/arrow_profile_screen_icon"
            android:text="@string/support_button_text"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="@dimen/big_text_size"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/info_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/profile_screen_button_color"
            android:drawableLeft="@drawable/info_icon"
            android:drawableRight="@drawable/arrow_profile_screen_icon"
            android:text="@string/info_button_text"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="@dimen/big_text_size"
            app:cornerRadius="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="80dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/log_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/white"
            android:drawableRight="@drawable/log_out_icon"
            android:text="@string/log_out_button_text"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/big_text_size"
            app:cornerRadius="10dp" />

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/bottom_nav_menu" />
    </FrameLayout>

</FrameLayout>