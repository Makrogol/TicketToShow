<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/bg_item_concerts_recyclerview">

    <ImageView
        android:id="@+id/show_poster_imageview"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/show_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_gravity="left"
        android:textStyle="bold"
        android:layout_row="1"
        android:layout_column="0"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/show_date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"
        android:layout_gravity="right"
        android:textColor="@color/item_recyclerview_low_text_color"
        android:layout_row="1"
        android:layout_column="1"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/show_address_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"
        android:layout_gravity="left"
        android:textColor="@color/item_recyclerview_low_text_color"
        android:layout_row="2"
        android:layout_column="0"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/show_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"
        android:layout_gravity="right"
        android:textColor="@color/item_recyclerview_low_text_color"
        android:layout_row="2"
        android:layout_column="1"
        tools:ignore="RtlHardcoded" />
</GridLayout>